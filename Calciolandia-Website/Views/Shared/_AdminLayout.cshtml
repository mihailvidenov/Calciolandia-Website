<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calciolandia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Calciolandia_Website.styles.css" asp-append-version="true" />
</head>
<body>
    <section class="min-vh-100 bg-image"
             style="background-image: url('https://img.freepik.com/free-vector/hand-painted-watercolor-pastel-sky-background_23-2148902771.jpg');">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand text-center" asp-area="" asp-controller="Home" asp-action="Index">Calciolandia</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="League" asp-action="Index">Leagues</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                            </li>
                            @if (User?.IsInRole(RoleConstants.Admin) ?? false)
                            {
                                <li class="nav-item dropdown">
                                    <div class="dropdown">
                                        <button type="button" class="btn bg-transparent dropdown-toggle" data-bs-toggle="dropdown">
                                            Add
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="League" asp-action="Add">League</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="FootballClub" asp-action="Add">Football Club</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Player" asp-action="Add">Player</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Manager" asp-action="Add">Manager</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="President" asp-action="Add">President</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Stadium" asp-action="Add">Stadium</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Fixture" asp-action="Add">Fixture</a></li>
                                        </ul>
                                    </div>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3 pt-3">
                @RenderBody()
            </main>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </section>
</body>
</html>

