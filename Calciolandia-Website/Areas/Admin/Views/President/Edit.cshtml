@model PresidentViewModel

@{
    ViewBag.Title = "Edit President";
}

<h2 class="text-center text-dark">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label text-dark">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label text-dark">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label text-dark">Image Url</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Age" class="form-label text-dark">Age</label>
                <input asp-for="@Model.Age" class="form-control" aria-required="true" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Nationality" class="form-label text-dark">Nationality</label>
                <input asp-for="@Model.Nationality" class="form-control" aria-required="true" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.BirthDate" class="form-label text-dark">Birth date</label>
                <input asp-for="@Model.BirthDate" class="form-control" aria-required="true" type="date" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.FootballClubId" class="form-label text-dark">Football club</label>
                <select asp-for="@Model.FootballClubId" class="form-control">
                    @foreach (var footballClub in Model.FootballClubs)
                    {
                        <option value="@footballClub.Id">@footballClub.Name</option>
                    }
                </select>
                <span asp-validation-for="FootballClubId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


